conky.config = {
	alignment = 'top_left',
	background = false,
	border_width = 1,
	cpu_avg_samples = 2,
	default_color = 'cornflowerblue',
	default_outline_color = 'white',
	default_shade_color = 'white',
	double_buffer = true,
	draw_borders = false,
	draw_graph_borders = true,
	draw_outline = false,
	draw_shades = false,
	gap_x = 55,
	gap_y = 70,
        maximum_width = 365,
	max_port_monitor_connections = 64,
	max_user_text = 16384,
	minimum_width = 345, minimum_height = 10,
        maximum_height = 50,
	net_avg_samples = 2,
	no_buffers = true,
	out_to_console = false,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_transparent = false,
	own_window_type = 'desktop',
	own_window = true,
	stippled_borders = 2,
	update_interval = 300,
	uppercase = false,
	use_spacer = 'left',
	use_xft = true,
	xftalpha = 0.8,
	font = 'Bitstream Vera Sans Mono:size=10',
        default_bar_height = 9,
        default_bar_width = 234,

};

conky.text = [[
${color #0077ff}$nodename ${alignc}$sysname $kernel 
${color #0077FF}${hr 2}

${color #0077FF}ZFS Storage Pools:
${color #0077FF}${hr 2}
${color #0077FF}${exec zpool list -o name,allocated,free,size,capacity,health | sed -n '1'p }
${color}${exec zpool list -o name,allocated,free,size,capacity,health | sed -n '2'p }


${color #0077FF}${exec zpool list -o name | sed -n '2'p } ${color}${alignr}${exec zpool status zroot | grep errors: | cut -d ':' -f2}
${color}${execp  zpool list -Ho name,allocated,size,capacity | sed -n '1'p | awk '{ print "" $2 "/" $3 "  " $4 "${color #0077FF} ${execbar echo  " $4 "}" }'}

${color #0077FF}ZFS Datasets:
${color #0077FF}${hr 2}
${exec zfs list zroot -o name | sed -n '1'p}                   ${exec zfs list zroot -o used,available,referenced | sed -n '1'p}

${color #0077FF}${exec zfs list zroot -o name | sed -n '2'p | cut -d '/' -f 1}                  ${color}${exec zfs list zroot -o used,available,referenced | sed -n '2'p}
|-${exec zfs list zroot/$(hostname) -o name | sed -n '2'p | cut -d '/' -f 2}  ${exec zfs list zroot/$(hostname) -o used,available,referenced | sed -n '2'p}
  |-${exec zfs list zroot/$(hostname)/ROOT -o name | sed -n '2'p | cut -d '/' -f 3}               ${exec zfs list zroot/$(hostname)/ROOT -o used,available,referenced | sed -n '2'p}
  | |-${exec zfs list $(mount | grep zfs | grep "on / " | cut -d ' ' -f 1) -o name | sed -n '2'p | cut -d '/' -f 4}          ${exec zfs list $(mount | grep zfs | grep "on / " | cut -d ' ' -f 1) -o used,available,referenced | sed -n '2'p}
  |
  |-${exec zfs list zroot/$(hostname)/DATA -o name | sed -n '2'p | cut -d '/' -f 3}               ${exec zfs list zroot/$(hostname)/DATA -o used,available,referenced | sed -n '2'p}
    |-${exec zfs list zroot/$(hostname)/DATA/home -o name | sed -n '2'p | cut -d '/' -f 4}             ${exec zfs list zroot/$(hostname)/DATA/home -o used,available,referenced | sed -n '2'p}
    | |-${exec zfs list $(mount | grep zfs | grep "on /home" | cut -d ' ' -f 1) -o name | sed -n '2'p | cut -d '/' -f 5}        ${exec zfs list $(mount | grep zfs | grep "on /home" | cut -d ' ' -f 1) -o used,available,referenced | sed -n '2'p}
    | |-${exec zfs list $(mount | grep zfs | grep "on /home" | cut -d ' ' -f 1) -o name | sed -n '3'p | cut -d '/' -f 5}       ${exec zfs list $(mount | grep zfs | grep "on /home" | cut -d ' ' -f 1) -o used,available,referenced | sed -n '3'p}
    |
    |-${exec zfs list zroot/$(hostname)/DATA/var -o name | sed -n '2'p | cut -d '/' -f 4}              ${exec zfs list zroot/$(hostname)/DATA/var -o used,available,referenced | sed -n '2'p}
      |-${exec zfs list zroot/$(hostname)/DATA/var/lib -o name | sed -n '2'p | cut -d '/' -f 5}            ${exec zfs list zroot/$(hostname)/DATA/var/lib -o used,available,referenced | sed -n '2'p}
      |-${exec zfs list zroot/$(hostname)/DATA/var/log -o name | sed -n '2'p | cut -d '/' -f 5}            ${exec zfs list zroot/$(hostname)/DATA/var/log -o used,available,referenced | sed -n '2'p}
  
]];
