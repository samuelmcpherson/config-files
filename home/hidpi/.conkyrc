conky.config = {
	alignment = 'top_right',
	background = false,
	border_width = 1,
	cpu_avg_samples = 2,
	default_color = 'cornflowerblue',
	default_outline_color = 'white',
	default_shade_color = 'white',
	double_buffer = true,
	draw_borders = false,
	draw_graph_borders = true,
	draw_outline = false,
	draw_shades = false,
	gap_x = 50,
	gap_y = 90,
	maximum_width = 550,
	max_port_monitor_connections = 64,
	max_specials = '512',
	max_user_text = 16384,
	minimum_width = 550, minimum_height = 10,
	net_avg_samples = 2,
	no_buffers = true,
	out_to_console = false,
	wm_class_name = 'Conky',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_transparent = false,
	own_window_type = 'conky',
	own_window = true,
	stippled_borders = 2,
	update_interval = 1,
	uppercase = false,
	use_spacer = 'yes',
	use_xft = true,
	xftalpha = 0.8,
	font = 'Bitstream Vera Sans Mono:size=9',


};

conky.text = [[
${color #0077ff}Uptime:$color $uptime ${color #0077ff} Load:$color $loadavg

${color #0077FF}CPU Core0:
${color #0077FF}${hr 2}
Temperature: ${color}${execi 1 sensors | grep "Core 0" | cut -d '(' -f 1 | cut -d '+' -f 2} ${execi 1000 sensors | grep "Core 0" | cut -d '(' -f 2 | cut -d ',' -f 1}
${color #0077FF}Load:
${color}Thread0:$color ${cpu cpu0}% ${color #0077FF}${cpubar 15,72}   ${color}Thread1:$color ${cpu cpu1}% ${color #0077FF}${cpubar 15,72}
${color #0077FF}${cpugraph cpu0 50,270 104E8B 0077ff} ${color #0077FF}${cpugraph cpu1 50,270 104E8B 0077ff}
${color #0077FF}CPU Core1:
${color #0077FF}${hr 2}
Temperature:  ${color}${execi 1 sensors | grep "Core 1" | cut -d '(' -f 1 | cut -d '+' -f 2} ${execi 1000 sensors | grep "Core 1" | cut -d '(' -f 2 | cut -d ',' -f 1}
Load:
${color}Thread2:$color ${cpu cpu2}% ${color #0077FF}${cpubar 15,72}   ${color}Thread3:$color ${cpu cpu3}% ${color #0077FF}${cpubar 17,72}
${color #0077FF}${cpugraph cpu2 50,270 104E8B 0077ff} ${color #0077FF}${cpugraph cpu3 50,270 104E8B 0077ff}
${color #0077FF}CPU Core2:
${color #0077FF}${hr 2}
Temperature: ${color}${execi 1 sensors | grep "Core 2" | cut -d '(' -f 1 | cut -d '+' -f 2} ${execi 1000 sensors | grep "Core 2" | cut -d '(' -f 2 | cut -d ',' -f 1}
${color #0077FF}Load:
${color}Thread4:$color ${cpu cpu4}% ${color #0077FF}${cpubar 15,72}   ${color}Thread5:$color ${cpu cpu5}% ${color #0077FF}${cpubar 15,72}
${color #0077FF}${cpugraph cpu4 50,270 104E8B 0077ff} ${color #0077FF}${cpugraph cpu5 50,270 104E8B 0077ff}
${color #0077FF}CPU Core3:
${color #0077FF}${hr 2}
Temperature: ${color}${execi 1 sensors | grep "Core 3" | cut -d '(' -f 1 | cut -d '+' -f 2} ${execi 1000 sensors | grep "Core 3" | cut -d '(' -f 2 | cut -d ',' -f 1}
${color #0077FF}Load:
${color}Thread6:$color ${cpu cpu6}% ${color #0077FF}${cpubar 15,72}   ${color}Thread7:$color ${cpu cpu7}% ${color #0077FF}${cpubar 15,72}
${color #0077FF}${cpugraph cpu6 50,270 104E8B 0077ff} ${color #0077FF}${cpugraph cpu7 50,270 104E8B 0077ff}
#${color #0077ff}Disk I/O: $color${diskio} $alignr${color #0077ff}${diskiograph 50,270 104E8B 0077ff 750}
${color #0077ff}${hr 2}
${color #0077ff}ZFS ARC Usage: ${color}${exec arc_summary | grep 'ARC size' | tr -s ' ' | cut -d ' ' -f6,7}${color #0077ff}/${color}${exec arc_summary | grep 'Target size' | tr -s ' ' | cut -d ' ' -f7,8} ${exec arc_summary | grep 'ARC size' | tr -s ' ' | cut -d ' ' -f4,5 | tr -d ' '}
${color #0077ff}RAM Usage:$color $mem${color #0077ff}/${color}$memmax $memperc% ${color #0077ff}${membar 15,80}
${memgraph 75,550}
${color #0077ff}Swap Usage:$color $swap${color #0077ff}/${color}$swapmax $swapperc% ${color #0077ff}${swapbar 15,80}
#${swapgraph 50,550}
#${color #0077ff}Procs:$color $processes ${color #0077ff}Run:$color $running_processes ${color #0077ff}CPU:$color ${i2c 0-002d temp 2}${color #0077ff} MB:$color ${i2c 0-002d temp 1} ${color #0077ff}HD:$color ${hddtemp /dev/hda}
#${color #0077ff}Entropy: ${color}${entropy_avail}${color #0077ff}/${color}${entropy_poolsize} ${color #0077ff}${entropy_bar 15,270}
${color #0077ff}Net Down:$color ${downspeed wlp2s0} /s ${color #0077ff}Net Up:$color ${upspeed wlp1s0} /s
${color #0077ff}${downspeedgraph wlp2s0 50,270 104E8B 0077ff} ${color #0077ff}${upspeedgraph wlp1s0 50,270 104E8B 0077ff}
${color #0077FF}${hr 2}
${color #0077ff}Top Processes:
${color #0077ff}Name                PID     CPU%   MEM%
$color ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
$color ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
$color ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
$color ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color #0077ff}Mem usage
$color ${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
$color ${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
$color ${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
$color ${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}

]];
